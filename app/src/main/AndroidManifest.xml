<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.idanzimbler.epiclogin">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/applogo"
        android:label="@string/app_name"
        android:supportsRtl="false"
        android:theme="@style/AppTheme">
        <activity android:name=".view.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".view.SignUpActivity" />
        <activity android:name=".view.HomeActivity" />
        <activity android:name=".view.EpisodesActivity" />
        <activity android:name=".view.EpisodeActivity" />
        <activity android:name=".view.GenresActivity" />
        <activity android:name=".view.AboutActivity" />
        <activity android:name=".view.ProfileActivity"></activity>

    </application>

</manifest>